<!-- res/values/styles.xml -->
<resources>
    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orangePill</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedTopMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/RoundedTopCorners</item>
    </style>

    <style name="RoundedBottomMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/RoundedBottomCorners</item>
    </style>

    <style name="RoundedTopCorners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedBottomCorners" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
    </style>
</resources>
